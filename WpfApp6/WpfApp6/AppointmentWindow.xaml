<Window x:Class="WpfApp6.AppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="AppointmentWindow" Height="154" Width="300">
    <Grid>
        <Label Height="28" Margin="2,12,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="61">Subject:</Label>
        <Label Margin="2,46,0,42" HorizontalAlignment="Left" Width="61">Date:</Label>
        <Button Height="23" Margin="110,0,93,12" VerticalAlignment="Bottom" Click="SaveBtn_Click" Width="75">Save</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" VerticalAlignment="Bottom" Width="75" Click="CancelBtn_Click">Cancel</Button>
        <TextBox Height="23" Margin="56,13,12,0" Name="subjectTbx" VerticalAlignment="Top" />
        <DatePicker Margin="56,46,12,68" Name="datePicker"/>
    </Grid>
</Window>
